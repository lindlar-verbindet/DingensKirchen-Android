<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.villageservices.NeighbourActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <ImageView
                android:id="@+id/neighbour_header_image"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_logo_nbsh"/>
            <ImageView
                android:id="@+id/neighbour_image"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_header_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerCrop"
                android:src="@drawable/neighbour_image"/>
            <TextView
                android:id="@+id/neighbour_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_image"
                android:text="@string/neighbour_desc"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light" />
            <View
                android:id="@+id/neighbour_spacer"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/neighbour_desc"
                android:layout_height="3dp"
                android:paddingBottom="20dp"
                android:background="@color/primaryHighlight"/>
            <TextView
                android:id="@+id/neighbour_given_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_spacer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_given_name"/>
            <EditText
                android:id="@+id/neighbour_given_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/neighbour_given_name_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text"
                android:autofillHints=".AUTOFILL_HINT_PERSON_NAME_GIVEN"/>
            <TextView
                android:id="@+id/neighbour_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_given_name_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_name"/>
            <EditText
                android:id="@+id/neighbour_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/neighbour_name_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text"
                android:autofillHints=".AUTOFILL_HINT_PERSON_NAME_FAMILY"/>
            <TextView
                android:id="@+id/neighbour_address_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_name_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_address"/>
            <EditText
                android:id="@+id/neighbour_address_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/neighbour_address_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text"
                android:autofillHints=".AUTOFILL_HINT_POSTAL_ADDRESS"/>
            <Spinner
                android:id="@+id/neighbour_district_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_address_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:entries="@array/form_dropdown_districts"
                android:prompt="@string/help_topic_prompt_digital"/>
            <TextView
                android:id="@+id/neighbour_tel_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_district_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_telephone"/>
            <EditText
                android:id="@+id/neighbour_tel_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/neighbour_tel_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="phone"
                android:autofillHints=".AUTOFILL_HINT_PHONE_NUMBER"/>
            <TextView
                android:id="@+id/neighbour_mail_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_tel_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_mail"/>
            <EditText
                android:id="@+id/neighbour_mail_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/neighbour_mail_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="textEmailAddress"
                android:autofillHints=".AUTOFILL_HINT_EMAIL_ADDRESS"
                android:labelFor="@id/neighbour_mail_label"/>
            <TextView
                android:id="@+id/neighbour_topic_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_mail_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_topic_prompt_neighbour"/>
            <Spinner
                android:id="@+id/neighbour_topic_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_topic_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:entries="@array/form_help_topics_neighbour"
                android:prompt="@string/help_topic_prompt_digital"/>
            <TextView
                android:id="@+id/neighbour_other_topic_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/form_topic_other"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.157"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/neighbour_topic_spinner" />
            <EditText
                android:id="@+id/neighbour_other_topic_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/neighbour_other_topic_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text"
                android:importantForAutofill="no"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/neighbour_detail_topic_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_other_topic_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_optional_stuff"/>
            <EditText
                android:id="@+id/neighbour_detail_topic_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/neighbour_detail_topic_label" />
            <CheckBox
                android:id="@+id/neighbour_agreement_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/neighbour_detail_topic_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="onCheckboxClicked"
                android:buttonTint="@color/primaryHighlight"
                android:text="@string/form_agreement"/>
            <Button
                android:id="@+id/neighbour_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/neighbour_agreement_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_send"
                android:textColor="@color/white"
                android:backgroundTint="@color/primaryBackground"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
