<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.villageservices.LimoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <ImageView
                android:id="@+id/limo_header_image"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_limo"/>
            <ImageView
                android:id="@+id/limo_image"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/limo_header_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_limo"/>
            <TextView
                android:id="@+id/limo_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/limo_image"
                android:text="@string/limo_desc"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light" />
            <View
                android:id="@+id/limo_spacer"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/limo_desc"
                android:layout_height="3dp"
                android:paddingBottom="20dp"
                android:background="@color/primaryHighlight"/>
            <TextView
                android:id="@+id/limo_given_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/limo_spacer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_given_name"/>
            <EditText
                android:id="@+id/limo_given_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/limo_given_name_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text"
                android:autofillHints=".AUTOFILL_HINT_PERSON_NAME_GIVEN"/>
            <TextView
                android:id="@+id/limo_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/limo_given_name_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_name"/>
            <EditText
                android:id="@+id/limo_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/limo_name_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text"
                android:autofillHints=".AUTOFILL_HINT_PERSON_NAME_FAMILY"/>
            <TextView
                android:id="@+id/limo_date_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/limo_name_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_date"/>
            <EditText
                android:id="@+id/limo_date_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/limo_date_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="date" />
            <!-- Section disabled no longer wanted -->
            <TextView
                android:id="@+id/limo_time_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/limo_date_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_time"/>
            <EditText
                android:id="@+id/limo_time_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/limo_time_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="time" />
            <TextView
                android:id="@+id/limo_dest_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/limo_time_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_dest"/>

            <EditText
                android:id="@+id/limo_dest_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/limo_dest_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text" />
            <!-- Section disabled no longer wanted -->
            <TextView
                android:id="@+id/limo_tel_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/limo_dest_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_telephone"/>
            <EditText
                android:id="@+id/limo_tel_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/limo_tel_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="phone"
                android:autofillHints=".AUTOFILL_HINT_PHONE_NUMBER"/>
            <TextView
                android:id="@+id/limo_mail_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/limo_tel_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_mail"/>
            <EditText
                android:id="@+id/limo_mail_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/limo_mail_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="textEmailAddress"
                android:autofillHints=".AUTOFILL_HINT_EMAIL_ADDRESS" />
            <CheckBox
                android:id="@+id/limo_agreement_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/limo_mail_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:buttonTint="@color/primaryHighlight"
                android:onClick="onCheckboxClicked"
                android:text="@string/form_agreement"/>
            <Button
                android:id="@+id/limo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/limo_agreement_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/form_send"
                android:textColor="@color/white"
                android:backgroundTint="@color/primaryBackground"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>