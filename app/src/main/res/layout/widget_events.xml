<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/widget_rounded_corners"
    android:backgroundTint="@color/primaryHighlight">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:alpha="0.2"/>

    <TextView
        android:id="@+id/events_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="TERMINE"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/events_event_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/events_title"
        android:text="01.01.2021"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/events_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/events_event_date"
        android:text="Beispieltermin"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/events_event_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/events_event_title"
        android:text="Kurzbeschreibung..."
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>