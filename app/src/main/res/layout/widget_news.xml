<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_rounded_corners"
    android:backgroundTint="@color/primaryHighlight">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_megaphone"
        android:alpha="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="LINDLARER NEWS"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/news_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        app:layout_constraintStart_toStartOf="@id/news_title"
        app:layout_constraintEnd_toEndOf="@id/news_title"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/news_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/news_date"
        app:layout_constraintStart_toStartOf="@id/news_title"
        app:layout_constraintEnd_toEndOf="@id/news_title"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Aktuell stehen keine Nachrichten zur VerfÃ¼gung"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/news_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/news_heading"
        app:layout_constraintStart_toStartOf="@id/news_title"
        app:layout_constraintEnd_toEndOf="@id/news_title"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/news_preview"
        app:layout_constraintStart_toStartOf="@id/news_title"
        app:layout_constraintEnd_toEndOf="@id/news_title" />


</androidx.constraintlayout.widget.ConstraintLayout>