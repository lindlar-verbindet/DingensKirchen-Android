<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/widget_rounded_corners"
    android:backgroundTint="@color/primaryBackground">

    <TextView
        android:id="@+id/council_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Rathaus"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/council_example1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/council_title"
        app:layout_constraintStart_toStartOf="@id/council_title"
        app:layout_constraintEnd_toEndOf="@id/council_title"
        android:text="OnlineServices"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/council_example2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/council_example1"
        app:layout_constraintStart_toStartOf="@id/council_example1"
        app:layout_constraintEnd_toEndOf="@id/council_title"
        android:text="MÃ¼llkalender"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>