<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/widget_rounded_corners"
    android:backgroundTint="@color/primaryHighlight">

    <TextView
        android:id="@+id/village_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Dorfleben"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/village_exampe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/village_title"
        app:layout_constraintStart_toStartOf="@id/village_title"
        app:layout_constraintEnd_toEndOf="@id/village_title"
        android:text="Suche+Finde, DigitalBegleitung"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/village_exampe2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/village_exampe1"
        app:layout_constraintStart_toStartOf="@id/village_exampe1"
        app:layout_constraintEnd_toEndOf="@id/village_exampe1"
        android:text="Nachbarschaftshilfe"
        android:textStyle="bold"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>