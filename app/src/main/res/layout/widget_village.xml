<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/widget_rounded_corners"
    android:backgroundTint="@color/secondaryHighlight">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_people"
        android:alpha="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/village_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="DORFLEBEN"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/village_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/village_title"
        app:layout_constraintStart_toStartOf="@id/village_title"
        app:layout_constraintEnd_toEndOf="@id/village_title"
        android:text="FÃ¼r mehr Teilhabe - ehrenamtliche Dienste mobil nutzen. Nachbarschaftshilfe, LindlarMobil und vieles mehr."
        android:textSize="16dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"/>



</androidx.constraintlayout.widget.ConstraintLayout>