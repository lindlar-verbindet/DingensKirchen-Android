<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="#fff"
        android:gravity="center">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIPP DES TAGES"
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#E50007"/>

        <TextView
            android:id="@+id/tip_dialog_title"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="short title here"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textSize="18dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/tip_dialog_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text long text"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/tip_done_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="OK"
            android:textColor="@color/black"
            android:backgroundTint="@color/primaryHighlight"/>

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_circle"
        android:padding="3dp"
        android:src="@drawable/ic_bulb"/>

</RelativeLayout>